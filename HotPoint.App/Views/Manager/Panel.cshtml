@model ManagerPanelViewModel
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Мениджър панел";
}

<h1>Данни за @Model.Date</h1>

<div class="row">
    <div class="col-md-3 col-sm-6">
        <a href="manageUsers">
            <span class="count-top">
                <i class="fa fa-user"></i>
                Потребители общо
            </span>
            <div class="count">@Model.CustomersCount</div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-tag"></i>
            Продукти общо
        </span>
        <div class="count">@Model.ProductsCount</div>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-user-circle"></i>
            Готвачи общо
        </span>
        <div class="count">@Model.InternalSuppliers</div>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-truck"></i>
            Външни доставчици общо
        </span>
        <div class="count">@Model.ExternalSuppliers</div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3 col-sm-6">
        <a href="manageUsers">
            <span class="count-top">
                <i class="fa fa-user"></i>
                Поръчки за деня
            </span>
            <div class="count">@Model.CountOfOrders</div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-tag"></i>
            Нови поръчки
        </span>
        <div class="count">@Model.NewOrders.Count</div>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-user-circle"></i>
            Обработени поръчки
        </span>
        <div class="count">@Model.ProcessedOrders.Count</div>
    </div>
    <div class="col-md-3 col-sm-6">
        <span class="count-top">
            <i class="fa fa-truck"></i>
            Завършени поръчки
        </span>
        <div class="count">@Model.CompletedOrders.Count</div>
    </div>
</div>
